{
  "manifest_version": 3,
  "name": "RobotBetEx",
  "version": "0.1.0",
  "description": "Bet365 scrapper",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "RobotBetEx",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications",
    "cookies"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}